<div class="profile-page-container">
    <div class="container-with-button">
        <h1>Личный кабинет</h1>
        <button onclick="goBack()" class="btn btn-secondary back-button">
            <i class="fas fa-arrow-left"></i> Назад
        </button>
    </div>

    <div class="profile-content-wrapper">
        <!-- Основная информация -->
        <div class="personal-info-block">
            <div class="profile-header">
                <div>
                    <h2>ФИО</h2>
                    <p class="full-name">@Model.FullName</p>
                </div>
                <button class="edo-button">
                    <i class="fas fa-file-signature"></i> ЭДО
                </button>
            </div>

            <div class="profile-section">
                <h2>Текущее время</h2>
                <p id="current-time">@Model.CurrentTime</p>
            </div>

            <div class="profile-section">
                <h2>График работы</h2>
                <div class="schedule-details">
                    <div class="schedule-type">
                        <span>Тип графика</span>
                        <span class="schedule-value">@Model.WorkScheduleType</span>
                    </div>
                    <div class="shift-group">
                        <span>Смена</span>
                        <span class="schedule-value">@Model.ShiftGroup</span>
                    </div>
                </div>
            </div>

            <div class="profile-section">
                <h2>Баллы за тесты</h2>
                <p class="points-value">@Model.TotalPoints баллов</p>
            </div>
        </div>

        <!-- Блок курсов -->
        <div class="courses-block">
            <div class="courses-header">
                <h2>Пройденные курсы</h2>
                <div class="courses-count">@(Model.CompletedTests?.Count ?? 0)</div>
            </div>

            <div class="courses-list-container">
                @if (Model.CompletedTests != null && Model.CompletedTests.Count > 0)
                {
                    <ul class="courses-list">
                        @foreach (var test in Model.CompletedTests)
                        {
                            <li class="course-item">
                                <div class="course-icon">
                                    <i class="fas fa-certificate"></i>
                                </div>
                                <div class="course-info">
                                    <div class="course-name">@test</div>
                                    <div class="course-score">@(Model.TestPercentage ?? 0)%</div>
                                </div>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <div class="no-courses">
                        <i class="fas fa-book-open"></i>
                        <p>Нет пройденных курсов</p>
                    </div>
                }
            </div>
        </div>
</div>