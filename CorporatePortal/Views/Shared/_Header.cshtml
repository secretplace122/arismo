<header class="header">
    <div class="header-container">
        <!-- Логотип и название -->
        <div class="brand-container">
            <a href="/" class="brand">
                <i class="fas fa-building brand-logo"></i>
                <span class="brand-title">Arismo. Корпоративный портал.</span>
            </a>
        </div>

        <!-- Десктопная версия -->
        <div class="desktop-nav-container">
            <!-- Кнопка выхода -->
            <div class="desktop-logout">
                @if (!ViewContext.RouteData.Values["action"].ToString().Equals("Login", StringComparison.OrdinalIgnoreCase))
                {
                    <form method="post" asp-controller="Account" asp-action="Logout">
                        <button type="submit" class="logout-button">
                            <i class="fas fa-sign-out-alt"></i> Выйти
                        </button>
                    </form>
                }
            </div>
        </div>

        <!-- Мобильная версия -->
        <div class="mobile-controls">
            <button class="mobile-menu-toggle" aria-label="Меню">
                <span class="menu-icon"></span>
            </button>
        </div>
    </div>

    <!-- Мобильное меню (скрыто на десктопе) -->
    <nav class="mobile-nav">
        <ul class="mobile-nav-list">
            <li><a asp-controller="Home" asp-action="Index" class="nav-link">Главная</a></li>
            <li><a asp-controller="Home" asp-action="PersonalCabinet" class="nav-link">Личный кабинет</a></li>
            <li><a asp-controller="Home" asp-action="Knowledge_Base" class="nav-link">База знаний</a></li>
            <li><a asp-controller="Home" asp-action="Testpage" class="nav-link">Тестирование</a></li>
            <li><a asp-controller="Lunch" asp-action="Lunch" class="nav-link">Заказать обед</a></li>
            <li><a asp-controller="Home" asp-action="Feedback" class="nav-link">Обращение</a></li>
            <li><a asp-controller="Home" asp-action="Contacts" class="nav-link">Контакты</a></li>
            <li>
                <form method="post" asp-controller="Account" asp-action="Logout">
                    <button type="submit" class="logout-button">
                        <i class="fas fa-sign-out-alt"></i> Выйти
                    </button>
                </form>
            </li>
        </ul>
    </nav>
</header>