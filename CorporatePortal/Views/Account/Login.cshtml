@{
    ViewData["Title"] = "Вход";
    ViewData["BodyClass"] = "login-page";
    Layout = "_Layout";
}

<div class="auth-container">
    <div class="auth-card">
        <img src="~/images/logo.png" alt="Логотип компании" class="auth-logo">
        <h1 class="auth-title">Вход в систему</h1>

        <form method="post" action="/Account/Login" class="auth-form">
            <div class="form-field">
                <label for="username" class="field-label">Имя пользователя</label>
                <input type="text" id="username" name="username" required class="field-input">
            </div>

            <div class="form-field">
                <label for="password" class="field-label">Пароль</label>
                <input type="password" id="password" name="password" required class="field-input">
            </div>

            <button type="submit" class="primary-button">Войти</button>

            @if (ViewBag.Error != null)
            {
                <div class="error-message">
                    @ViewBag.Error
                </div>
            }
        </form>
    </div>
</div>